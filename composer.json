{
    "name": "cxl/common-lib",
    "type": "wordpress-plugin",
    "description": "Common Lib for CXL Projects, provides tools such as Hybrid Core framework etc.",
    "authors": [
        {
            "name": "CXL",
            "email": "dev@conversionxl.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/conversionxl/phpcs-ruleset"
        }
    ],
    "require": {
        "php" : ">=7.4",
        "themehybrid/hybrid-core": "^6.0",
        "themehybrid/hybrid-contracts": "^1.0",
        "themehybrid/hybrid-tools": "^1.0"
    },
    "require-dev": {
        "cxl/phpcs-ruleset": "dev-master",
        "vimeo/psalm": "^4.9.3"
    },
    "autoload": {
        "psr-4": {
            "CXL\\CommonLib\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
