{
  "name": "cxl-common-lib",
  "version": "2021.08.18",
  "description": "CXL Common Lib plugin, which hosts shared libraries, like Hybrid Core.",
  "private": true,
  "author": "",
  "scripts": {
    "i18n": "npm run i18n:textdomain && npm run i18n:pot",
    "i18n:textdomain": "npx wpi18n addtextdomain --exclude=vendor,node_modules,bin-dev",
    "i18n:pot": "npx wpi18n makepot --domain-path=/public/lang",
    "export": "npx mix --mix-config=webpack.mix.export.js --production",
    "build": "npm run i18n && npm run export",
    "pre-build": "composer update --prefer-dist --no-dev -o",
    "post-build": "composer update"
  },
  "devDependencies": {
    "@10up/eslint-config": "^2.1.1",
    "@10up/stylelint-config": "^1.0.11",
    "@conversionxl/lint-staged-config": "^0.3.0",
    "@wordpress/eslint-plugin": "^9.0.1",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsdoc": "^36.0.7",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "laravel-mix": "^6.0.6",
    "lint-staged": "^10.5.3",
    "node-wp-i18n": "^1.2.3",
    "postcss": "^8.1.14",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "shx": "^0.3.3",
    "stylelint": "^13.8.0"
  }
}
